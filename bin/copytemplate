#!/usr/bin/env bash

SCRIPT_DIR=$(dirname $0)

set -e
source "${SCRIPT_DIR}/core.incl.sh"

function copytemplate () {
    local servie=$1
    local file=$2
    shift 2

    local war_dir=$(war_template_dir ${servie})
    local file_dir=$(dirname ${file})

    if [ "$file_dir" != "." ]; then
        mkdir -p ${file_dir}
        file_dir=""
    fi

    cp $@ ${war_dir}/${file} ./src/${servie}/custom/pages/${file_dir}
}

copytemplate $@
